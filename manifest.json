{
  "name": "__MSG_appName__",
  "version": "1.0",
  "manifest_version": 3,
  "description": "__MSG_appDesc__",
  "default_locale": "en",
  "permissions": ["tabs"],
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "close-right-tabs": {
      "suggested_key": {
        "default": "Alt+Shift+R"
      },
      "description": "__MSG_closeTabsToRight__"
    },
    "close-left-tabs": {
      "suggested_key": {
        "default": "Alt+Shift+L"
      },
      "description": "__MSG_closeTabsToLeft__"
    },
    "close-other-tabs": {
      "suggested_key": {
        "default": "Alt+Shift+O"
      },
      "description": "__MSG_closeOtherTabs__"
    }
  },
  "icons": {
    "16": "art16.png",
    "32": "art32.png",
    "48": "art48.png",
    "128": "art128.png"
  }
}
